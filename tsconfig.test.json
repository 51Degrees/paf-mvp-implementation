{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@core/*": ["paf-mvp-core-js/src/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include":
  [
    "**/tests/**/*",
    "node_modules/@types/jest/index.d.ts"
  ],
}
