{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES5",
      "types": ["node", "tld-extract", "ec-key", "ecdsa-secp256r1"]
    }
  },
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": [
      "paf-mvp-core-js/@types",
      "paf-mvp-demo-express/@types"
    ],
    "paths": {
      "@core/*": ["./paf-mvp-core-js/src/*"],
      "@operator/*": ["./paf-mvp-operator-express/src/*"],
      "@operator-client/*": ["./paf-mvp-operator-client-express/src/*"],
      "@frontend/*": ["./paf-mvp-frontend/src/*"]
    }
  },
  "exclude": [
    "paf-mvp-frontend/cypress",
    "**/tests"
  ]
}
